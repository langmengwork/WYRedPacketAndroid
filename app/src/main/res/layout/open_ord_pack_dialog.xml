<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:background="@drawable/open_pack_bg"
        >

        <ImageView
            android:id="@+id/open_pack_deleter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_pack_deleter"
            android:layout_alignParentRight="true"
            android:layout_margin="25dp"
            />

        <ImageView
            android:id="@+id/open_pack_icon_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/open_pack_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            />

        <ImageView
            android:id="@+id/open_pack_bt_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_pack_bt"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            />

        <TextView
            android:id="@+id/open_pack_title_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千米广告"
            android:textColor="@color/color_E5CDA0"
            android:textSize="14dp"
            android:layout_below="@id/open_pack_icon_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/open_pack_content_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给您发了一个广告红包"
            android:textColor="@color/color_E5CDA0"
            android:textSize="20dp"
            android:layout_below="@id/open_pack_title_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>

</LinearLayout>