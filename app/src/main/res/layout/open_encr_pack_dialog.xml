<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:background="@drawable/open_pack_bg"
        >

        <ImageView
            android:id="@+id/open_encr_deleter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/open_pack_deleter"
            android:layout_alignParentRight="true"
            android:layout_margin="25dp"
            />

        <ImageView
            android:id="@+id/open_encr_icon_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@drawable/open_pack_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            />

        <TextView
            android:id="@+id/open_encr_title_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千米广告"
            android:textColor="@color/color_E5CDA0"
            android:textSize="14dp"
            android:layout_below="@id/open_encr_icon_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/open_pack_content_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给您发了一个广告红包"
            android:textColor="@color/color_E5CDA0"
            android:textSize="20dp"
            android:layout_below="@id/open_encr_title_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            />
        
        <com.example.lx.wyredpacketandroid.utils.customview.PasswordView
            android:id="@+id/open_encr_password_dialog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:mode="rect"
            app:passwordLength="4"
            app:passwordPadding="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/open_encr_password_dialog"
            android:layout_marginTop="30dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_edit"
                android:textColor="@color/color_E5CDA0"
                android:textSize="11dp"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/open_pack_tip"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/open_encr_time_dialog"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_fillter_ad4733_28"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="110px"
            android:text="剩余时间：04:59"
            android:textColor="@color/color_E5CDA0"
            android:textSize="13dp"
            />

    </RelativeLayout>

</LinearLayout>