<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dynamic_rb_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    >

    <ImageView
        android:id="@+id/dynamic_rb_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/open_pack_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/dynamic_rb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平台红包"
        android:textSize="16dp"
        android:textColor="@color/color_606F95"
        android:layout_toRightOf="@id/dynamic_rb_icon"
        android:layout_alignTop="@id/dynamic_rb_icon"
        />

    <ImageView
        android:id="@+id/dynamic_rb_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/open_pack_icon"
        android:layout_toRightOf="@id/dynamic_rb_icon"
        android:layout_below="@id/dynamic_rb_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/dynamic_rb_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每天都有好心情@@@@@@@@@@@@@"
        android:textSize="14dp"
        android:textColor="@color/color_666666"
        android:layout_toRightOf="@id/dynamic_rb_img"
        android:layout_alignTop="@id/dynamic_rb_img"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/dynamic_rb_img"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/eye_icon"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/dynamic_rb_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textColor="@color/color_666666"
            android:textSize="11dp"
            android:layout_marginRight="6dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/news_icon"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/dynamic_rb_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textColor="@color/color_666666"
            android:textSize="11dp"
            android:layout_marginRight="6dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like_icon"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/dynamic_rb_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textColor="@color/color_666666"
            android:textSize="11dp"
            android:layout_marginRight="6dp"
            />

    </LinearLayout>

</RelativeLayout>